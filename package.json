{
    "name": "unify-ql",
    "version": "0.1.3",
    "repository": {
        "type": "git",
        "url": "https://github.com/RuiChen0101/UnifyQL_ts.git"
    },
    "type": "module",
    "description": "Unified Query Language for complex discrete system",
    "main": "./lib/src/index.js",
    "types": "./lib/src/index.d.ts",
    "typesVersions": {
        "*": {
            "converter": [
                "lib/src/converter"
            ],
            "service-config": [
                "lib/src/service-config"
            ]
        }
    },
    "exports": {
        ".": "./lib/src/index.js",
        "./converter": {
            "require": "./lib/src/converter/index.js",
            "import": "./lib/src/converter/index.js"
        },
        "./service-config": {
            "require": "./lib/src/service-config/index.js",
            "import": "./lib/src/service-config/index.js"
        }
    },
    "scripts": {
        "build": "tsc --build --clean && tsc",
        "deploy": "npm run build && npm publish",
        "test": "mocha -r test/init.test.ts 'test/**/*.test.ts' --exit --recursive",
        "test-coverage": "nyc --reporter=text mocha --loader ts-node/esm -r test/init.test.ts 'test/**/*.test.ts' --exit --recursive"
    },
    "author": "RuiChen",
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.3.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.21",
        "chai": "^4.3.6",
        "mocha": "^9.2.1",
        "nyc": "^15.1.0",
        "ts-mockito": "^2.6.1",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.2"
    },
    "dependencies": {
        "abort-controller": "^3.0.0",
        "cors": "^2.8.5",
        "nanoid": "^3.3.1",
        "node-fetch": "^3.2.3"
    }
}